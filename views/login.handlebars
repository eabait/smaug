        <a href="{{oauthUrl}}" class="red ui button" ng-click="loading = true">
          <i class="icon" ng-class="{true:'loading', false: 'github'}[loading]"></i>
          Sign in
        </a>
      </div>
    </section>
    <footer>
      Made by <a href="https://twitter.com/eabait">eabait</a>
      &#124; <a href="https://github.com/eabait/smaug">fork it</a>
